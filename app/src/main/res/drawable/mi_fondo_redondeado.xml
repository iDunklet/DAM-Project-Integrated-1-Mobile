<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo transparente -->
    <solid android:color="@android:color/transparent" />

    <!-- Borde verde con efecto degradado -->
    <stroke
        android:width="10dp"
        android:color="@color/verde_oscuro" />

    <!-- Efecto: degradado en el borde -->
    <gradient
        android:startColor="@color/verde_claro"
        android:endColor="@color/verde_oscuro"
        android:angle="0" />

    <corners android:radius="10dp" />

    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />

</shape>