<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantalla"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="30dp"
        android:rowCount="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/txtResultados"
            android:textColor="@color/blanco"
            android:textSize="100sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="75dp"
            android:text="@string/txtNombre"
            android:textColor="@color/blanco"
            android:textSize="75sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginStart="75dp"
            android:text="@string/txtAciertos"
            android:textColor="@color/blanco"
            android:textSize="75sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginStart="75dp"
            android:text="@string/txtErrores"
            android:textColor="@color/blanco"
            android:textSize="75sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginStart="75dp"
            android:text="@string/txtTiempo"
            android:textColor="@color/blanco"
            android:textSize="75sp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="start|bottom"
            android:contentDescription="@string/little_shapes"
            android:src="@drawable/little_shapes" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="end"
            android:background="@drawable/boton_rojo"
            android:text="@string/exit"
            android:textSize="50sp"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="end"
            android:background="@drawable/boton_verde"
            android:text="@string/playAgain"
            android:textSize="66sp"
            app:backgroundTint="@null"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>