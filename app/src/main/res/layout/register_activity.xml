<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/fondoPantalla"
    >

    <TextView
        android:id="@+id/labelInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="INICIO"
        android:textSize="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >

        <TextView
            android:id="@+id/labelNombre"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="250dp"
            android:text="NOMBRE:"
            android:textSize="50dp" />

        <EditText
            android:id="@+id/TextboxNombre"
            android:layout_width="508dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:textSize="45dp"
            android:background="@drawable/edit_text_radius"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >

        <TextView
            android:id="@+id/labelEdad"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="20dp"
            android:text="EDAD:"
            android:textSize="50dp" />

        <EditText
            android:id="@+id/TextboxEdad"
            android:layout_width="220dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_radius"
            android:textSize="45dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >

        <TextView
            android:id="@+id/labelRondas"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="20dp"
            android:text="RONDAS:"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonRondas5"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/colorTextbox"
            />

        <Button
            android:id="@+id/buttonRondas10"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/colorTextbox"
            />
        <Button
            android:id="@+id/buttonRondas15"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/colorTextbox"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/labelNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DIFICULTAD"
        android:textSize="50dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonNivel1"
            android:layout_width="130dp"
            android:layout_height="68dp"

            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/colorTextbox" />

        <Button
            android:id="@+id/buttonNivel2"
            android:layout_width="130dp"
            android:layout_height="68dp"

            android:background="@drawable/edit_text_radius"
            android:backgroundTint="@color/colorTextbox" />


    </LinearLayout>



</LinearLayout>